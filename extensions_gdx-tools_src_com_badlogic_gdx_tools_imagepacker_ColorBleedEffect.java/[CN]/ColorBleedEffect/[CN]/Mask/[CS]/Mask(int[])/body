{
  data=new int[rgb.length];
  pending=new int[rgb.length];
  changing=new int[rgb.length];
  ARGBColor color=new ARGBColor();
  for (int i=0; i < rgb.length; i++) {
    int pixel=rgb[i];
    color.argb=pixel;
    if (color.alpha() == 0) {
      data[i]=TO_PROCESS;
      pending[pendingSize]=i;
      pendingSize++;
    }
 else     data[i]=REALDATA;
  }
}
