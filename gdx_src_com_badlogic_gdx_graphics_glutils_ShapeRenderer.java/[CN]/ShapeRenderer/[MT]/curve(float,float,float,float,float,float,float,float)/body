{
  float dx1=x2 - x1;
  float dy1=y2 - y1;
  float dx2=x3 - x2;
  float dy2=y3 - y2;
  float dx3=x4 - x3;
  float dy3=y4 - y3;
  float length=(float)Math.sqrt(dx1 * dx1 + dy1 * dy1) + (float)Math.sqrt(dx2 * dx2 + dy2 * dy2) + (float)Math.sqrt(dx3 * dx3 + dy3 * dy3);
  curve(x1,y1,x2,y2,x3,y3,x4,y4,4 * (int)Math.cbrt(length));
}
