{
  if (v < 0) {
    throw new IndexOutOfBoundsException();
  }
  if (v == 0) {
    length=0;
    chain=null;
    return;
  }
  flush();
  int index=length;
  length=v;
  for (Cell c=chain; c != null; c=c.next) {
    int start=index - c.value.length();
    if (v > start) {
      if (v < index) {
        c.value=c.value.substring(0,v - start);
      }
      break;
    }
    chain=c.next;
    index=start;
  }
}
