{
  if (mat == currentMaterial)   return;
  final boolean hasTex=mat.hasTexture();
  if (useTexture != hasTex || currentMaterial == null) {
    useTexture=hasTex;
    if (hasTex)     gl.glEnable(GL11.GL_TEXTURE_2D);
 else     gl.glDisable(GL11.GL_TEXTURE_2D);
  }
  currentMaterial=mat;
  for (  MaterialAttribute attr : currentMaterial) {
    if (attr instanceof TextureAttribute)     bindTextureAttribute(gl,(TextureAttribute)attr);
 else     attr.bind();
  }
}
