{
  SwingUtilities.invokeLater(new Runnable(){
    public void run(){
      final String output=JOptionPane.showInputDialog(null,title,text);
      Gdx.app.postRunnable(new Runnable(){
        public void run(){
          if (output != null)           listener.input(output);
 else           listener.canceled();
        }
      }
);
    }
  }
);
}
