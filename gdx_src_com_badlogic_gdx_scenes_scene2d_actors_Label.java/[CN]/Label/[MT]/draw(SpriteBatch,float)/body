{
  cache.setColor(color.r,color.g,color.b,color.a * parentAlpha);
switch (valign) {
case TOP:
    if (cache.getFont().isFlipped())     cache.setPosition(x,y);
 else     cache.setPosition(x,y + height - bounds.height);
  break;
case CENTER:
cache.setPosition(x,y + (height - bounds.height) / 2);
break;
case BOTTOM:
if (cache.getFont().isFlipped()) cache.setPosition(x,y + height - bounds.height);
 else cache.setPosition(x,y);
break;
}
cache.draw(batch);
}
