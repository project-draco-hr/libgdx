{
  Gdx.gl.glClear(GL10.GL_COLOR_BUFFER_BIT);
  accum+=Gdx.graphics.getDeltaTime();
  while (accum > 1.0f / 60.0f) {
    screen.tick(input);
    input.tick();
    accum-=1.0f / 60.0f;
  }
  screen.render();
  batch.begin();
  font.draw(batch,"fps: " + Gdx.graphics.getFramesPerSecond(),10,30);
  batch.end();
}
