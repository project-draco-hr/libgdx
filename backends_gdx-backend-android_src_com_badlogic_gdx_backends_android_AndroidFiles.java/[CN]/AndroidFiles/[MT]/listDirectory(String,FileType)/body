{
  if (type == FileType.Internal) {
    try {
      return assets.list(directory);
    }
 catch (    Exception ex) {
      throw new GdxRuntimeException("Couldn't open directory '" + directory + "'");
    }
  }
  if (type == FileType.External) {
    if (new File(sdcard + directory).exists() == false)     throw new GdxRuntimeException("Couldn't open directory '" + directory + "'");
 else     return new File(sdcard + directory).list();
  }
 else {
    if (new File(directory).exists() == false)     throw new GdxRuntimeException("Couldn't open directory '" + directory + "'");
 else     return new File(directory).list();
  }
}
