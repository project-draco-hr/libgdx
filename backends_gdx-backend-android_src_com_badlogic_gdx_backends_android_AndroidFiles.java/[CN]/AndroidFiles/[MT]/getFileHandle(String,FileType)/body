{
  if (type == FileType.Internal) {
    boolean exists=true;
    try {
      InputStream in=assets.open(filename);
      in.close();
    }
 catch (    Exception ex) {
      exists=false;
    }
    if (!exists)     throw new GdxRuntimeException("Couldn't open file '" + filename + "'");
 else     return new AndroidFileHandle(assets,filename);
  }
  if (type == FileType.External) {
    if (new File(sdcard + filename).exists() == false)     throw new GdxRuntimeException("Couldn't open file '" + filename + "'");
 else     return new AndroidFileHandle(null,sdcard + filename);
  }
 else {
    if (new File(filename).exists() == false)     throw new GdxRuntimeException("Couldn't open file '" + filename + "'");
 else     return new AndroidFileHandle(null,filename);
  }
}
