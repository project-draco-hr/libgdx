{
  if (canvas != null) {
    Display.setParent(canvas);
  }
 else {
    Display.setDisplayMode(new DisplayMode(width,height));
    Display.setFullscreen(false);
    Display.setTitle(title);
  }
  int samples=0;
  try {
    Display.create(new PixelFormat(8,8,0,samples));
  }
 catch (  Exception ex) {
    Display.destroy();
    try {
      Display.create(new PixelFormat(8,8,0));
    }
 catch (    Exception ex2) {
      Display.destroy();
      try {
        Display.create(new PixelFormat());
      }
 catch (      Exception ex3) {
        if (ex3.getMessage().contains("Pixel format not accelerated"))         throw new GdxRuntimeException("OpenGL is not supported by the video driver.",ex3);
      }
    }
  }
  initiateGLInstances();
}
