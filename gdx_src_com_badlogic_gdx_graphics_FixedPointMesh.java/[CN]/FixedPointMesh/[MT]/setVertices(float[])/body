{
  if (vertices.length % (vertexSizeInt) != 0)   throw new IllegalArgumentException("vertices array must have a size being a multiple of " + vertexSize / 4);
  if (vertices.length > verticesArray.length)   throw new IllegalArgumentException("vertices array is to large to fit into this mesh");
  for (int i=0; i < vertices.length; i++)   verticesArray[i]=(int)(vertices[i] * 65536);
  verticesBuffer.position(0);
  verticesBuffer.put(verticesArray,0,vertices.length);
  verticesBuffer.flip();
}
