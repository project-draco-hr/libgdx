{
  float area=0.0f;
  area+=bodies[bodies.length - 1].getWorldCenter().x * bodies[0].getWorldCenter().y - bodies[0].getWorldCenter().x * bodies[bodies.length - 1].getWorldCenter().y;
  for (int i=0; i < bodies.length - 1; ++i) {
    area+=bodies[i].getWorldCenter().x * bodies[i + 1].getWorldCenter().y - bodies[i + 1].getWorldCenter().x * bodies[i].getWorldCenter().y;
  }
  area*=.5f;
  return area;
}
