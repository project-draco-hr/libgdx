{
  if (!running)   return;
  running=false;
  setGlobals();
  Array<LifecycleListener> listeners=lifecycleListeners;
synchronized (listeners) {
    for (    LifecycleListener listener : listeners) {
      listener.pause();
      listener.dispose();
    }
  }
  listener.pause();
  listener.dispose();
  Gdx.app=null;
  Gdx.graphics=null;
  if (audio != null) {
    audio.dispose();
    Gdx.audio=null;
  }
  if (files != null)   Gdx.files=null;
  if (net != null)   Gdx.net=null;
  stopped();
}
