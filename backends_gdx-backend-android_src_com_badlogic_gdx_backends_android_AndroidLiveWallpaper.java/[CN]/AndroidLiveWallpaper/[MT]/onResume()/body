{
  Gdx.app=this;
  Gdx.input=input;
  Gdx.audio=audio;
  Gdx.files=files;
  Gdx.graphics=graphics;
  input.registerSensorListeners();
  if (graphics != null) {
    graphics.onResumeGLSurfaceView();
  }
  if (!firstResume) {
    audio.resume();
    graphics.resume();
  }
 else   firstResume=false;
}
