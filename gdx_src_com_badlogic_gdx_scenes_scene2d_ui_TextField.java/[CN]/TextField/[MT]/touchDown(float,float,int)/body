{
  if (pointer != 0)   return false;
  if (stage != null)   stage.setKeyboardFocus(this);
  keyboard.show(true);
  clearSelection();
  lastBlink=0;
  cursorOn=false;
  x=x - renderOffset;
  for (int i=0; i < glyphPositions.size; i++) {
    float pos=glyphPositions.items[i];
    if (pos > x) {
      cursor=Math.max(0,i - 1);
      return true;
    }
  }
  cursor=Math.max(0,glyphPositions.size - 1);
  return true;
}
