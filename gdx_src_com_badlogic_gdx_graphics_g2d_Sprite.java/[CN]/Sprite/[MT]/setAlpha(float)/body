{
  int intBits=NumberUtils.floatToIntColor(vertices[C1]);
  int alphaBits=(int)(255 * a) << 24;
  intBits=intBits & 0x00FFFFFF;
  intBits=intBits | alphaBits;
  float color=NumberUtils.intToFloatColor(intBits);
  vertices[C1]=color;
  vertices[C2]=color;
  vertices[C3]=color;
  vertices[C4]=color;
}
