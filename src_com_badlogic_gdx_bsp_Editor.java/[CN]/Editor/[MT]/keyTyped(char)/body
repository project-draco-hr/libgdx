{
  if (character == 'c') {
    polygons.clear();
    currentPolygon=null;
    drawing=false;
  }
  if (character == 's') {
    currentPolygon=null;
    drawing=false;
    app.getInput().getTextInput(new TextInputListener(){
      @Override public void input(      String text){
        saveMesh(text);
      }
    }
,"Save","");
  }
  return false;
}
