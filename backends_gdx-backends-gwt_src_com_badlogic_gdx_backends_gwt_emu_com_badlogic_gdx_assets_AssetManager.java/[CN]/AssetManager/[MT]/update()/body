{
  try {
    if (tasks.size() == 0) {
      while (loadQueue.size() != 0 && tasks.size() == 0) {
        nextTask();
      }
      if (tasks.size() == 0)       return true;
    }
    return updateTask() && loadQueue.size() == 0 && tasks.size() == 0;
  }
 catch (  Throwable t) {
    handleTaskError(t);
    return loadQueue.size() == 0;
  }
}
