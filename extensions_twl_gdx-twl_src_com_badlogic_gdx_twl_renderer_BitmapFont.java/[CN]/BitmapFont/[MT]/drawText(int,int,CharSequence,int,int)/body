{
  int startX=x;
  Glyph lastGlyph=null;
  while (start < end) {
    lastGlyph=getGlyph(str.charAt(start++));
    if (lastGlyph != null) {
      lastGlyph.draw(x,y);
      x+=lastGlyph.xadvance;
      break;
    }
  }
  while (start < end) {
    char ch=str.charAt(start++);
    Glyph g=getGlyph(ch);
    if (g != null) {
      x+=lastGlyph.getKerning(ch);
      lastGlyph=g;
      g.draw(x,y);
      x+=g.xadvance;
    }
  }
  return x - startX;
}
