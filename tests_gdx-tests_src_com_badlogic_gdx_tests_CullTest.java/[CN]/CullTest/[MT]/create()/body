{
  sphere=ObjLoader.loadObj(Gdx.files.internal("data/sphere.obj").read());
  cam=new OrthographicCamera(45,45 * (Gdx.graphics.getWidth() / (float)Gdx.graphics.getHeight()));
  cam.near=1;
  cam.far=200;
  Random rand=new Random();
  for (int i=0; i < positions.length; i++) {
    positions[i]=new Vector3(rand.nextFloat() * 100 - rand.nextFloat() * 100,rand.nextFloat() * 100 - rand.nextFloat() * 100,rand.nextFloat() * -100 - 3);
  }
  batch=new SpriteBatch();
  font=new BitmapFont();
}
