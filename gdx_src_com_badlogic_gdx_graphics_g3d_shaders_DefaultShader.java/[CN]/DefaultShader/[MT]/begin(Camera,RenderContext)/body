{
  this.context=context;
  this.camera=camera;
  program.begin();
  if (defaultDepthFunc == 0)   context.setDepthTest(false,GL10.GL_LEQUAL);
 else   context.setDepthTest(true,defaultDepthFunc);
  set(u_projTrans,camera.combined);
  set(u_cameraPosition,camera.position);
  set(u_cameraDirection,camera.direction);
  set(u_cameraUp,camera.up);
  for (  final DirectionalLight dirLight : directionalLights)   dirLight.set(0,0,0,0,-1,0);
  for (  final PointLight pointLight : pointLights)   pointLight.set(0,0,0,0,0,0,0);
  for (int i=0; i < bones.length; i++)   bones[i]=idtMatrix.val[i % 16];
}
