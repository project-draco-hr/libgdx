{
  this.context=context;
  this.camera=camera;
  program.begin();
  context.setDepthTest(true,GL10.GL_LEQUAL);
  program.setUniformMatrix(projTransLoc,camera.combined);
  if (currentLights != null)   for (int i=0; i < currentLights.length; i++)   currentLights[i].set(null);
  ambient.set(0,0,0,0);
}
