{
  float[] vertices=this.vertices;
  if (xAmount > 0) {
    float u=(vertices[2] + xAmount) % 1;
    float u2=u + width / texture.getWidth();
    vertices[U1]=u;
    vertices[U2]=u;
    vertices[U3]=u2;
    vertices[U4]=u2;
  }
  if (yAmount > 0) {
    float v=(vertices[V1] + yAmount) % 1;
    float v2=v + height / texture.getHeight();
    vertices[V1]=v;
    vertices[V2]=v2;
    vertices[V3]=v2;
    vertices[V4]=v;
  }
}
