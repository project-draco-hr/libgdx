{
  if (current != null) {
    if (current.array) {
      if (!current.needsComma)       current.needsComma=true;
 else       writer.write(',');
    }
 else {
      if (!named)       throw new IllegalStateException("Name must be set.");
      named=false;
    }
  }
  writer.write(value);
  return this;
}
