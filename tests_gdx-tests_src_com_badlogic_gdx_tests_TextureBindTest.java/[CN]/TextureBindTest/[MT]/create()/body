{
  Pixmap pixmap=new Pixmap(32,32,Format.RGB565);
  pixmap.setColor(1,0,0,1);
  pixmap.fill();
  tex1=new Texture(pixmap);
  pixmap.setColor(0,0,1,1);
  pixmap.fill();
  tex2=new Texture(pixmap);
  pixmap.dispose();
  for (int i=0; i < 2000; i++) {
    positions.add(new Vector2((float)Math.random() * Gdx.graphics.getWidth(),(float)Math.random() * Gdx.graphics.getHeight()));
  }
  if (Gdx.graphics.isGL20Available())   shader=SpriteBatch.createDefaultShader();
  cam=new OrthographicCamera(Gdx.graphics.getWidth(),Gdx.graphics.getHeight());
  cam.update();
  mesh=new Mesh(false,4,6,new VertexAttribute(Usage.Position,2,ShaderProgram.POSITION_ATTRIBUTE),new VertexAttribute(Usage.ColorPacked,4,ShaderProgram.COLOR_ATTRIBUTE),new VertexAttribute(Usage.TextureCoordinates,2,ShaderProgram.TEXCOORD_ATTRIBUTE + "0"));
  mesh.setIndices(new short[]{0,1,2,2,3,0});
  mesh.setVertices(new float[]{0,0,Color.WHITE.toIntBits(),0,1,32,0,Color.WHITE.toIntBits(),1,1,32,32,Color.WHITE.toIntBits(),1,0,0,32,Color.WHITE.toIntBits(),0,0});
}
