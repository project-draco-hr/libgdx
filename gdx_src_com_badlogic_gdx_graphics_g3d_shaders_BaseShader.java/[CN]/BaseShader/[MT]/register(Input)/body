{
  if (program != null)   throw new GdxRuntimeException("Cannot register input after initialization");
  final Input existing=getInput(input.name);
  if (existing != null) {
    if (existing.scope != input.scope)     throw new GdxRuntimeException(input.name + ": An input with the same name but different scope is already registered.");
    return existing;
  }
  inputs.add(input);
  return input;
}
