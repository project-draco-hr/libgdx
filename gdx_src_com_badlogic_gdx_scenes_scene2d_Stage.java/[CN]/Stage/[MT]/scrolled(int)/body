{
  if (scrollFocus == null)   return false;
  InputEvent event=Pools.obtain(InputEvent.class);
  event.setStage(this);
  event.setType(InputEvent.Type.scrolled);
  event.setScrollAmount(amount);
  scrollFocus.fire(event);
  boolean handled=event.isHandled();
  Pools.free(event);
  return handled;
}
