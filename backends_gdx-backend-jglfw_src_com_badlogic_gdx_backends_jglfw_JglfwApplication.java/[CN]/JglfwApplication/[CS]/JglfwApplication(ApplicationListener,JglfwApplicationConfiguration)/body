{
  this.listener=listener;
  Runnable runnable=new Runnable(){
    public void run(){
      try {
        start(config);
      }
 catch (      Throwable ex) {
        exception(ex);
      }
    }
  }
;
  if (config.runOnEDT)   EventQueue.invokeLater(runnable);
 else   new Thread(runnable,"MainLoop").start();
}
