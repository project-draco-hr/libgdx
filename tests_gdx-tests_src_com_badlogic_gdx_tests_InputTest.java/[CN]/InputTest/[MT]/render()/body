{
  if (Gdx.input.justTouched()) {
    Gdx.app.log("Input Test","just touched, button: " + (Gdx.input.isButtonPressed(Buttons.LEFT) ? "left " : "") + (Gdx.input.isButtonPressed(Buttons.MIDDLE) ? "middle " : "")+ (Gdx.input.isButtonPressed(Buttons.RIGHT) ? "right" : ""));
  }
  if (Gdx.input.isTouched()) {
    Gdx.app.log("Input Test","is touched");
  }
}
