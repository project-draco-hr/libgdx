{
  GL20 gl=Gdx.gl;
  gl.glClear(GL20.GL_COLOR_BUFFER_BIT);
  renderer.render();
  guiCam.update();
  batcher.setProjectionMatrix(guiCam.combined);
  batcher.enableBlending();
  batcher.begin();
switch (state) {
case GAME_READY:
    presentReady();
  break;
case GAME_RUNNING:
presentRunning();
break;
case GAME_PAUSED:
presentPaused();
break;
case GAME_LEVEL_END:
presentLevelEnd();
break;
case GAME_OVER:
presentGameOver();
break;
}
batcher.end();
}
