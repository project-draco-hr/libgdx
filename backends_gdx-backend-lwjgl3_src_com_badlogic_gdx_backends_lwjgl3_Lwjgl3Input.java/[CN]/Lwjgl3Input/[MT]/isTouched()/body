{
  return GLFW.glfwGetMouseButton(window.getWindowHandle(),GLFW.GLFW_MOUSE_BUTTON_1) == GLFW.GLFW_PRESS || GLFW.glfwGetMouseButton(window.getWindowHandle(),GLFW.GLFW_MOUSE_BUTTON_2) == GLFW.GLFW_PRESS || GLFW.glfwGetMouseButton(window.getWindowHandle(),GLFW.GLFW_MOUSE_BUTTON_3) == GLFW.GLFW_PRESS || GLFW.glfwGetMouseButton(window.getWindowHandle(),GLFW.GLFW_MOUSE_BUTTON_4) == GLFW.GLFW_PRESS || GLFW.glfwGetMouseButton(window.getWindowHandle(),GLFW.GLFW_MOUSE_BUTTON_5) == GLFW.GLFW_PRESS;
}
