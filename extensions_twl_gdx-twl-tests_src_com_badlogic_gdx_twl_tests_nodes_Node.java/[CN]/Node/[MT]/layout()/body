{
  super.layout();
  int yIn=getInnerY();
  int yOut=getInnerY();
  int xIn=getX();
  int xOut=getRight() - 2 * Pad.RADIUS;
  for (int i=0, n=pads.size(); i < n; i++) {
    Pad pad=pads.get(i);
    pad.adjustSize();
    if (pad.isInput()) {
      pad.setPosition(xIn,yIn);
      yIn+=Pad.RADIUS * 3;
    }
 else {
      pad.setPosition(xOut,yOut);
      yOut+=Pad.RADIUS * 3;
    }
  }
}
