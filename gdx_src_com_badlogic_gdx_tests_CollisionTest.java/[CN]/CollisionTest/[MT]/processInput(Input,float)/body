{
  if (input.isKeyPressed(Input.Keys.KEYCODE_ENTER))   cam.getPosition().set(0,1,0);
  if (input.isKeyPressed(Input.Keys.KEYCODE_DPAD_LEFT))   yAngle+=deltaTime * 120;
  if (input.isKeyPressed(Input.Keys.KEYCODE_DPAD_RIGHT))   yAngle-=deltaTime * 120;
  cam.getDirection().set(0,0,-1);
  mat.setToRotation(axis,yAngle);
  cam.getDirection().rot(mat);
  segment.a.set(cam.getPosition());
  segment.b.set(cam.getPosition()).y-=1.1f;
  if (input.isKeyPressed(Input.Keys.KEYCODE_DPAD_UP))   velocity.add(cam.getDirection().tmp().mul(SPEED * deltaTime));
  if (input.isKeyPressed(Input.Keys.KEYCODE_DPAD_DOWN))   velocity.add(cam.getDirection().tmp().mul(SPEED * -deltaTime));
  collider.collide(cMesh,cam.getPosition(),velocity,0.0005f);
  collider.collide(cMesh,cam.getPosition(),new Vector(0,-0.5f * deltaTime,0),0.0005f);
  velocity.mul(0.90f);
}
