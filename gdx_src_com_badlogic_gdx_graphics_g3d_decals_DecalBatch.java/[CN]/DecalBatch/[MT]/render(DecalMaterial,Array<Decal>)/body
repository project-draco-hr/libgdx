{
  material.set();
  int idx=0;
  for (  Decal decal : decals) {
    decal.update();
    System.arraycopy(decal.vertices,0,vertices,idx,decal.vertices.length);
    idx+=decal.vertices.length;
    if (idx == vertices.length) {
      flush(idx);
      idx=0;
    }
  }
  if (idx > 0) {
    flush(idx);
  }
}
