{
  ballModels.clear();
  ballSprites.clear();
  if (world != null) {
    world.dispose();
    world=null;
  }
  if (polygons == null || polygons.length == 0)   return;
  world=new World(new Vector2(0,0),true);
  Body b=world.createBody(new BodyDef());
  for (  Vector2[] polygon : polygons) {
    Vector2[] resizedPolygon=new Vector2[polygon.length];
    for (int i=0; i < polygon.length; i++)     resizedPolygon[i]=new Vector2(polygon[i]).mul(1f / PX_PER_METER);
    PolygonShape shape=new PolygonShape();
    shape.set(resizedPolygon);
    FixtureDef fd=new FixtureDef();
    fd.density=1f;
    fd.friction=0.8f;
    fd.restitution=0.2f;
    fd.shape=shape;
    b.createFixture(fd);
    shape.dispose();
  }
}
