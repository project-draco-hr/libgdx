{
  if (x == 0.0f) {
    if (y > 0.0f)     return PI / 2;
    if (y == 0.0f)     return 0.0f;
    return -PI / 2;
  }
  final float atan;
  final float z=y / x;
  if (Math.abs(z) < 1.0f) {
    atan=z / (1.0f + 0.28f * z * z);
    if (x < 0.0f)     return y < 0.0f ? atan - PI : atan + PI;
    return atan;
  }
  atan=PI / 2 - z / (z * z + 0.28f);
  return y < 0.0f ? atan - PI : atan;
}
