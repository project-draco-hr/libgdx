{
  if (s < 0) {
    throw new IllegalArgumentException("Can't scale a frequency band by a negative value.");
  }
  if (spectrum[i] != 0) {
    real[i]/=spectrum[i];
    imag[i]/=spectrum[i];
    spectrum[i]*=s;
    real[i]*=spectrum[i];
    imag[i]*=spectrum[i];
  }
  if (i != 0 && i != timeSize / 2) {
    real[timeSize - i]=real[i];
    imag[timeSize - i]=-imag[i];
  }
}
