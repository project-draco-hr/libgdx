{
  int width=0;
  Glyph lastGlyph=null;
  while (start < end) {
    lastGlyph=getGlyph(str.charAt(start++));
    if (lastGlyph != null) {
      width=lastGlyph.xadvance;
      break;
    }
  }
  while (start < end) {
    char ch=str.charAt(start++);
    Glyph g=getGlyph(ch);
    if (g != null) {
      width+=lastGlyph.getKerning(ch);
      lastGlyph=g;
      width+=g.xadvance;
    }
  }
  textBounds.width=width * scaleX;
  textBounds.height=capHeight;
  return textBounds;
}
