{
  Drawable bg=style.background;
  BitmapFont font=style.font;
  prefHeight=Math.max(bg.getTopHeight() + bg.getBottomHeight() + font.getCapHeight() - font.getDescent() * 2,bg.getMinHeight());
  float maxItemWidth=0;
  for (int i=0; i < items.size; i++)   maxItemWidth=Math.max(font.getBounds(items.get(i).toString()).width,maxItemWidth);
  prefWidth=bg.getLeftWidth() + bg.getRightWidth() + maxItemWidth;
  ListStyle listStyle=style.listStyle;
  ScrollPaneStyle scrollStyle=style.scrollStyle;
  prefWidth=Math.max(prefWidth,maxItemWidth + scrollStyle.background.getLeftWidth() + scrollStyle.background.getRightWidth()+ listStyle.selection.getLeftWidth()+ listStyle.selection.getRightWidth()+ Math.max(style.scrollStyle.vScroll != null ? style.scrollStyle.vScroll.getMinWidth() : 0,style.scrollStyle.vScrollKnob != null ? style.scrollStyle.vScrollKnob.getMinWidth() : 0));
}
