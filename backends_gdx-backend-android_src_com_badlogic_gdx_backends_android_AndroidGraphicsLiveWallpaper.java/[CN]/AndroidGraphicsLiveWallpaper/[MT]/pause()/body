{
synchronized (synch) {
    if (!running)     return;
    running=false;
    pause=true;
    pausing=true;
    while (pausing) {
      try {
        synch.wait();
      }
 catch (      InterruptedException ignored) {
        Gdx.app.log("AndroidGraphics","waiting for pause synchronization failed!");
      }
    }
  }
}
