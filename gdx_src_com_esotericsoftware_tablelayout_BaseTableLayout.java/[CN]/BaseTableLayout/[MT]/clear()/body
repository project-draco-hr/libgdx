{
  for (int i=cells.size() - 1; i >= 0; i--) {
    Cell cell=cells.get(i);
    Object widget=cell.widget;
    if (widget != null)     toolkit.removeChild(table,(C)widget);
    toolkit.freeCell(cell);
  }
  cells.clear();
  rows=0;
  columns=0;
  if (rowDefaults != null)   toolkit.freeCell(rowDefaults);
  rowDefaults=null;
  invalidate();
}
