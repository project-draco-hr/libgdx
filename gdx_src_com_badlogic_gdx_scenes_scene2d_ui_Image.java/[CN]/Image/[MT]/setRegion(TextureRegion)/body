{
  if (region != null) {
    if (this.region == region)     return;
    if (getPrefWidth() != region.getRegionWidth() || getPrefHeight() != region.getRegionHeight())     invalidateHierarchy();
  }
 else {
    if (getPrefWidth() != 0 || getPrefHeight() != 0)     invalidateHierarchy();
  }
  this.region=region;
  patch=null;
}
