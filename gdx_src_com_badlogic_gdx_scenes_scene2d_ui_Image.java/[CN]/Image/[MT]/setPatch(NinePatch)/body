{
  if (patch != null) {
    if (this.patch == patch)     return;
    if (getPrefWidth() != patch.getTotalWidth() || getPrefHeight() != patch.getTotalHeight())     invalidateHierarchy();
  }
 else {
    if (getPrefWidth() != 0 || getPrefHeight() != 0)     invalidateHierarchy();
  }
  this.patch=patch;
  region=null;
}
