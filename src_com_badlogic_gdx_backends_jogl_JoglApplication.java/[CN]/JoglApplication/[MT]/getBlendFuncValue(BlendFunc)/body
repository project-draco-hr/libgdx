{
  if (func == BlendFunc.DestAlpha)   return GL.GL_DST_ALPHA;
  if (func == BlendFunc.DestColor)   return GL.GL_DST_COLOR;
  if (func == BlendFunc.One)   return GL.GL_ONE;
  if (func == BlendFunc.OneMinusDestAlpha)   return GL.GL_ONE_MINUS_DST_ALPHA;
  if (func == BlendFunc.OneMinusDestColor)   return GL.GL_ONE_MINUS_DST_COLOR;
  if (func == BlendFunc.OneMinusSourceAlpha)   return GL.GL_ONE_MINUS_SRC_ALPHA;
  if (func == BlendFunc.OneMinusSourceColor)   return GL.GL_ONE_MINUS_SRC_COLOR;
  if (func == BlendFunc.SourceAlpha)   return GL.GL_SRC_ALPHA;
  if (func == BlendFunc.SourceColor)   return GL.GL_SRC_COLOR;
  if (func == BlendFunc.Zero)   return GL.GL_ZERO;
  return GL.GL_ONE;
}
