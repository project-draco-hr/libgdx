  mytable.row();
  mytable.add(new Image(new Texture("data/group-debug.png")));
  mytable.row();
  mytable.add(new Image(new Texture("data/group-debug.png")));
  ScrollPane pane=new ScrollPane(mytable,skin);
  pane.setScrollingDisabled(true,false);
  if (false) {
    pane.pack();
    pane.setHeight(Gdx.graphics.getHeight());
  }
