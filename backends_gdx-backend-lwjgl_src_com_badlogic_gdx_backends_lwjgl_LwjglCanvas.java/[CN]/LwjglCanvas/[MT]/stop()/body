{
  EventQueue.invokeLater(new Runnable(){
    public void run(){
      if (!running)       return;
      running=false;
      try {
        Display.destroy();
        if (audio != null)         audio.dispose();
      }
 catch (      Throwable ignored) {
      }
      listener.pause();
      listener.dispose();
    }
  }
);
}
