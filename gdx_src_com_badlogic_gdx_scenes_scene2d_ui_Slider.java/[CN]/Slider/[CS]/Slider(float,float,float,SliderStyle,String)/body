{
  super(name);
  if (min > max)   throw new IllegalArgumentException("min must be > max: " + min + " > "+ max);
  if (steps < 0)   throw new IllegalArgumentException("steps must be > 0: " + steps);
  setStyle(style);
  this.min=min;
  this.max=max;
  this.steps=steps;
  this.value=min;
  width=getPrefWidth();
  height=getPrefHeight();
}
