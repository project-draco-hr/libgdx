{
  super(name,prefWidth,0);
  setStyle(style);
  if (min > max)   throw new IllegalArgumentException("min must be > max");
  if (steps < 0)   throw new IllegalArgumentException("unit must be > 0");
  this.min=min;
  this.max=max;
  this.steps=steps;
  this.value=min;
  layout();
  this.width=prefWidth;
  this.height=prefHeight;
}
