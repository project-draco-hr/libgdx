{
  if (light instanceof DirectionalLight)   directionalLights.add((DirectionalLight)light);
 else   if (light instanceof PointLight)   pointLights.add((PointLight)light);
 else   if (light instanceof SpotLight)   spotLights.add((SpotLight)light);
 else   throw new GdxRuntimeException("Unknown light type");
  return this;
}
