{
  if (attributes.length == 0)   throw new IllegalArgumentException("attributes must be >= 1");
  ArrayList<VertexAttribute> list=new ArrayList<VertexAttribute>();
  for (int i=0; i < attributes.length; i++)   list.add(attributes[i]);
  this.attributes=Collections.unmodifiableList(list);
  checkValidity();
  vertexSize=calculateOffsets();
}
