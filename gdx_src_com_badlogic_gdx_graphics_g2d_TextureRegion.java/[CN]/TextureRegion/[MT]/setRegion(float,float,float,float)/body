{
  int texWidth=texture.getWidth(), texHeight=texture.getHeight();
  regionWidth=Math.round(Math.abs(u2 - u) * texWidth);
  regionHeight=Math.round(Math.abs(v2 - v) * texHeight);
  if (regionWidth == 1 && regionHeight == 1) {
    u+=0.5f / texWidth;
    u2=u;
    v+=0.5f / texHeight;
    v2=v;
  }
  this.u=u;
  this.v=v;
  this.u2=u2;
  this.v2=v2;
}
