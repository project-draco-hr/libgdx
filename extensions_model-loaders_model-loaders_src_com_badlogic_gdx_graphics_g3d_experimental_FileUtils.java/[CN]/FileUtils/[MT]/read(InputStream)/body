{
  StringBuilder stringBuilder=new StringBuilder(MAX_BUFFER_SIZE);
  try {
    BufferedReader bufferedReader=new BufferedReader(new InputStreamReader(in,"UTF-8"),MAX_BUFFER_SIZE);
    char[] buffer=new char[MAX_BUFFER_SIZE];
    int read;
    while ((read=bufferedReader.read(buffer,0,buffer.length)) > 0) {
      stringBuilder.append(buffer,0,read);
    }
    return stringBuilder.toString();
  }
 catch (  Exception e) {
    throw new RuntimeException("failed to get string from input stream",e);
  }
 finally {
    try {
      in.close();
    }
 catch (    Exception e) {
    }
  }
}
