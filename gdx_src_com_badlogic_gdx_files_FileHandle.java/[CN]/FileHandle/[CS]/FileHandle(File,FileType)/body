{
  this.file=file;
  this.type=type;
switch (type) {
case Classpath:
    if (FileHandle.class.getResourceAsStream(file.getPath().replace('\\','/')) == null)     throw new GdxRuntimeException("File not found: " + file + " ("+ type+ ")");
  break;
case Internal:
if (!file.exists()) throw new GdxRuntimeException("File not found: " + file + " ("+ type+ ")");
break;
}
}
