{
  Writer writer=null;
  try {
    writer=writer(append,charset);
    writer.write(string);
  }
 catch (  Exception ex) {
    throw new GdxRuntimeException("Error writing file: " + file + " ("+ type+ ")",ex);
  }
 finally {
    try {
      if (writer != null)       writer.close();
    }
 catch (    Exception ignored) {
    }
  }
}
