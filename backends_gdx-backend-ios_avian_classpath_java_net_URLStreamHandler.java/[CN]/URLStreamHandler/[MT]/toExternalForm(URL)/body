{
  StringBuilder sb=new StringBuilder();
  sb.append(url.getProtocol()).append(":");
  if (url.getHost() != null) {
    sb.append("//").append(url.getHost());
    if (url.getPort() >= 0) {
      sb.append(":").append(url.getPort());
    }
  }
  if (url.getFile() != null) {
    if (url.getHost() != null) {
      sb.append("/");
    }
    sb.append(url.getFile());
  }
  return sb.toString();
}
