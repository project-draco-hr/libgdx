{
  int oDataLen=(iLen * 4 + 2) / 3;
  int oLen=((iLen + 2) / 3) * 4;
  char[] out=new char[oLen];
  int ip=iOff;
  int iEnd=iOff + iLen;
  int op=0;
  while (ip < iEnd) {
    int i0=in[ip++] & 0xff;
    int i1=ip < iEnd ? in[ip++] & 0xff : 0;
    int i2=ip < iEnd ? in[ip++] & 0xff : 0;
    int o0=i0 >>> 2;
    int o1=((i0 & 3) << 4) | (i1 >>> 4);
    int o2=((i1 & 0xf) << 2) | (i2 >>> 6);
    int o3=i2 & 0x3F;
    out[op++]=map1[o0];
    out[op++]=map1[o1];
    out[op]=op < oDataLen ? map1[o2] : '=';
    op++;
    out[op]=op < oDataLen ? map1[o3] : '=';
    op++;
  }
  return out;
}
