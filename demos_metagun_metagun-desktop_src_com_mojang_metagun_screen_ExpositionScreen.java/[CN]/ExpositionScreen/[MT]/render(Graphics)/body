{
  int w=Art.bg.getHeight();
  g.drawImage(Art.bg,0,-(time / 8 % w),null);
  g.drawImage(Art.bg,0,-(time / 8 % w) + w,null);
  int yo=time / 4;
  for (int y=0; y <= 240 / 6; y++) {
    int yl=yo / 6 - 240 / 6 + y;
    if (yl >= 0 && yl < lines.size()) {
      drawString(lines.get(yl),g,(320 - 40 * 6) / 2,y * 6 - yo % 6);
    }
  }
}
