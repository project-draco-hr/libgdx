{
  int w=-Art.bg.getRegionHeight();
  spriteBatch.begin();
  draw(Art.bg,0,-(time / 8 % w));
  draw(Art.bg,0,-(time / 8 % w) + w);
  int yo=time / 4;
  for (int y=0; y <= 240 / 6; y++) {
    int yl=yo / 6 - 240 / 6 + y;
    if (yl >= 0 && yl < lines.size()) {
      drawString(lines.get(yl),(320 - 40 * 6) / 2,y * 6 - yo % 6);
    }
  }
  spriteBatch.end();
}
