{
  window.getInput().resetPollingStates();
  if (!isFullscreen()) {
    GLFW.glfwSetWindowSize(window.getWindowHandle(),width,height);
    updateFramebufferInfo();
    return true;
  }
 else {
    boolean result=recreateWindow(width,height,null);
    updateFramebufferInfo();
    return result;
  }
}
