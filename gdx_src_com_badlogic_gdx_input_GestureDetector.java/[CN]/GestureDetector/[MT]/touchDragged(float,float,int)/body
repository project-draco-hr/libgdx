{
  final Pointer pt=getPointerById(pointer);
  if (pt == Pointer.NO_POINTER)   return false;
  if (longPressFired)   return false;
  pt.pos.set(x,y);
  if (pinching) {
    if (listener != null) {
      boolean result=listener.pinch(pointer1.initialPos,pointer2.initialPos,pointer1.pos,pointer2.pos);
      return listener.zoom(pointer1.initialPos.dst(pointer2.initialPos),pointer1.pos.dst(pointer2.pos)) || result;
    }
    return false;
  }
  tracker.update(x,y,Gdx.input.getCurrentEventTime());
  if (inTapSquare && !isWithinTapSquare(x,y,tapSquareCenterX,tapSquareCenterY)) {
    longPressTask.cancel();
    inTapSquare=false;
  }
  if (!inTapSquare) {
    panning=true;
    return listener.pan(x,y,tracker.deltaX,tracker.deltaY);
  }
  return false;
}
