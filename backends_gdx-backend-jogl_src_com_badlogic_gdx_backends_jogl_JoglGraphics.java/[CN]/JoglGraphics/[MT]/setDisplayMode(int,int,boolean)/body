{
  if (!supportsDisplayModeChange())   return false;
  if (!fullscreen) {
    isFullscreen=false;
    return setWindowedMode(width,height);
  }
 else {
    DisplayMode mode=findBestMatch(width,height);
    if (mode == null)     return false;
    isFullscreen=true;
    return setDisplayMode(mode);
  }
}
