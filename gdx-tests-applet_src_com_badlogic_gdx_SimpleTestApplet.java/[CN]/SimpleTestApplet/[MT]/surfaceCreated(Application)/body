{
  mesh=new Mesh(app.getGraphics(),true,true,false,8,36,new VertexAttribute(Usage.Position,3,"a_Position"));
  float hsize=0.5f;
  float vsize=0.5f;
  float zsize=0.5f;
  mesh.setVertices(new float[]{-hsize,vsize,-zsize,hsize,vsize,-zsize,-hsize,-vsize,-zsize,hsize,-vsize,-zsize,-hsize,vsize,zsize,hsize,vsize,zsize,-hsize,-vsize,zsize,hsize,-vsize,zsize});
  mesh.setIndices(new short[]{0,1,2,2,1,3,1,5,3,3,5,7,5,4,7,7,4,6,4,0,6,6,0,2,0,4,1,1,4,5,2,6,3,3,6,7});
  camera=new PerspectiveCamera();
  camera.getPosition().set(2,2,2);
  camera.getDirection().set(-1,-1,-1);
}
