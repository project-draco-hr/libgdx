{
  validate();
  Color color=getColor();
  if (style.background != null) {
    batch.setColor(color.r,color.g,color.b,color.a * parentAlpha);
    style.background.draw(batch,getX(),getY(),getWidth(),getHeight());
  }
  float scaleX=getScaleX();
  float scaleY=getScaleY();
  Color.tmp.set(color);
  if (style.fontColor != null)   Color.tmp.mul(style.fontColor);
  cache.setColor(Color.tmp);
  cache.setPosition(getX(),getY());
  if (scaleX != 1 | scaleY != 1) {
    Matrix4 transform=batch.getTransformMatrix();
    float x=-getOriginX() * (scaleX - 1);
    float y=-getOriginY() * (scaleY - 1);
    batch.end();
    transform.scl(scaleX,scaleY,1);
    transform.trn(x,y,0);
    batch.begin();
    cache.draw(batch,color.a * parentAlpha);
    batch.end();
    transform.trn(-x,-y,0);
    transform.scl(1 / scaleX,1 / scaleY,1);
    batch.begin();
  }
 else   cache.draw(batch,color.a * parentAlpha);
}
