{
  if (newText instanceof StringBuilder) {
    if (text.equals(newText))     return;
    text.setLength(0);
    text.append((StringBuilder)newText);
  }
 else {
    if (newText == null)     newText="";
    if (textEquals(newText))     return;
    text.setLength(0);
    text.append(newText);
  }
  invalidateHierarchy();
}
