{
  if (filter == TextureFilter.Linear)   return GL_LINEAR;
 else   if (filter == TextureFilter.Nearest)   return GL_NEAREST;
 else   if (filter == TextureFilter.MipMap)   return GL_LINEAR_MIPMAP_LINEAR;
 else   if (filter == TextureFilter.MipMapNearestNearest)   return GL_NEAREST_MIPMAP_NEAREST;
 else   if (filter == TextureFilter.MipMapNearestLinear)   return GL_NEAREST_MIPMAP_LINEAR;
 else   if (filter == TextureFilter.MipMapLinearNearest)   return GL_LINEAR_MIPMAP_NEAREST;
 else   if (filter == TextureFilter.MipMapLinearLinear)   return GL_LINEAR_MIPMAP_LINEAR;
 else   return GL_LINEAR_MIPMAP_LINEAR;
}
