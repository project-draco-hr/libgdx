{
  if (Gdx.gl20 != null) {
    tmpHandle.clear();
    tmpHandle.put(bufferHandle);
    GL20 gl=Gdx.gl20;
    gl.glBindBuffer(GL20.GL_ELEMENT_ARRAY_BUFFER,0);
    gl.glDeleteBuffers(1,tmpHandle);
    bufferHandle=0;
  }
 else   if (Gdx.gl11 != null) {
    tmpHandle.clear();
    tmpHandle.put(bufferHandle);
    GL11 gl=Gdx.gl11;
    gl.glBindBuffer(GL11.GL_ELEMENT_ARRAY_BUFFER,0);
    gl.glDeleteBuffers(1,tmpHandle);
    bufferHandle=0;
  }
}
