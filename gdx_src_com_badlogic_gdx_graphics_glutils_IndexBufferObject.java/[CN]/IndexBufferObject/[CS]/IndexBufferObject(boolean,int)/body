{
  empty=maxIndices == 0;
  if (empty) {
    maxIndices=1;
  }
  byteBuffer=BufferUtils.newUnsafeByteBuffer(maxIndices * 2);
  isDirect=true;
  buffer=byteBuffer.asShortBuffer();
  buffer.flip();
  byteBuffer.flip();
  bufferHandle=createBufferObject();
  usage=isStatic ? GL20.GL_STATIC_DRAW : GL20.GL_DYNAMIC_DRAW;
}
