{
  this.scroll=scroll;
  scrollUp=new Task(){
    public void run(){
      System.out.println(getScrollPixels());
      scroll.setScrollY(scroll.getScrollY() - getScrollPixels());
    }
  }
;
  scrollDown=new Task(){
    public void run(){
      System.out.println(getScrollPixels());
      scroll.setScrollY(scroll.getScrollY() + getScrollPixels());
    }
  }
;
}
