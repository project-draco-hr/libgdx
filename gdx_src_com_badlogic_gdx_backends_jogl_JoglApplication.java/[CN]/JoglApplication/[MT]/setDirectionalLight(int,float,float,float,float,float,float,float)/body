{
  GL gl=GLContext.getCurrent().getGL();
  color[0]=0;
  color[1]=0;
  color[2]=0;
  color[3]=0;
  position[0]=-x;
  position[1]=-y;
  position[2]=-z;
  position[3]=0;
  gl.glLightfv(GL.GL_LIGHT0 + light,GL.GL_AMBIENT,color,0);
  color[0]=r;
  color[1]=g;
  color[2]=b;
  color[3]=a;
  gl.glLightfv(GL.GL_LIGHT0 + light,GL.GL_DIFFUSE,color,0);
  gl.glLightfv(GL.GL_LIGHT0 + light,GL.GL_POSITION,position,0);
}
