{
  x=new float[3];
  y=new float[3];
  float dx1=x2 - x1;
  float dx2=x3 - x1;
  float dy1=y2 - y1;
  float dy2=y3 - y1;
  float cross=dx1 * dy2 - dx2 * dy1;
  boolean ccw=(cross > 0);
  if (ccw) {
    x[0]=x1;
    x[1]=x2;
    x[2]=x3;
    y[0]=y1;
    y[1]=y2;
    y[2]=y3;
  }
 else {
    x[0]=x1;
    x[1]=x3;
    x[2]=x2;
    y[0]=y1;
    y[1]=y3;
    y[2]=y2;
  }
}
