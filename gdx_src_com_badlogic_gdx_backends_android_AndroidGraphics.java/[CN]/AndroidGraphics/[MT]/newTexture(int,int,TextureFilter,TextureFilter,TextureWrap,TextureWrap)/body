{
  Bitmap.Config config=Bitmap.Config.ARGB_8888;
  Bitmap bitmap=Bitmap.createBitmap(width,height,config);
  Texture texture=null;
  if (gl10 != null)   texture=new AndroidTexture(gl10,bitmap,minFilter,magFilter,uWrap,vWrap);
 else   texture=new AndroidTexture(gl20,bitmap,minFilter,magFilter,uWrap,vWrap);
  bitmap.recycle();
  return texture;
}
