{
  if (pointer != 0)   return false;
  if (hit(x,y) != null) {
    if (list != null)     stage.removeActor(list);
    stage.toStageCoordinates((int)screenCoords.x,(int)screenCoords.y,stageCoords);
    list=new ComboList(this.name + "-list",stageCoords.x,stageCoords.y);
    stage.addActor(list);
    return true;
  }
  return false;
}
