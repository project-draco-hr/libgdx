{
  if (needle.length() == 0)   return start;
  for (int i=start; i < haystack.length() - needle.length() + 1; ++i) {
    int j=0;
    for (; j < needle.length(); ++j) {
      if (haystack.charAt(i + j) != needle.charAt(j)) {
        break;
      }
    }
    if (j == needle.length()) {
      return i;
    }
  }
  return -1;
}
