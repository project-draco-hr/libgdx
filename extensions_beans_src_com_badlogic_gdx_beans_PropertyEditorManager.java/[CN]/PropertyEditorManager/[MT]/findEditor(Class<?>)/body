{
  if (targetType == null) {
    throw new NullPointerException();
  }
  Class<?> editorClass=registeredEditors.get(targetType);
  if (editorClass != null) {
    try {
      return (PropertyEditor)editorClass.newInstance();
    }
 catch (    Exception e) {
    }
  }
  String editorClassName=targetType.getName() + "Editor";
  try {
    return loadEditor(targetType,editorClassName);
  }
 catch (  Exception exception) {
  }
  String shortEditorClassName=(targetType.isPrimitive() ? (editorClassName.substring(0,1).toUpperCase() + editorClassName.substring(1)) : editorClassName.substring(editorClassName.lastIndexOf('.') + 1));
  for (  String element : path) {
    if (element == null) {
      continue;
    }
    try {
      return loadEditor(targetType,element + '.' + shortEditorClassName);
    }
 catch (    Exception e) {
    }
  }
  return null;
}
