{
  ObjectMap<String,Field> fields=typeToFields.get(object.getClass());
  if (fields == null)   fields=cacheFields(object.getClass());
  Field field=fields.get(name);
  if (field == null)   throw new SerializationException("Unable to find field: " + name + " ("+ object.getClass().getName()+ ")");
  try {
    field.set(object,readValue(field.getType(),map.get(name)));
  }
 catch (  Exception ex) {
    throw new SerializationException("Error setting field: " + field.getName() + " ("+ object.getClass().getName()+ ")",ex);
  }
}
