{
  if (type == FileType.External)   fileName=this.externalPath + fileName;
  File file=new File(fileName);
  if (LwjglFileHandle.class.getResource("/" + fileName) == null && file.exists() == false)   throw new GdxRuntimeException("File not found: " + fileName + " ("+ type+ ")");
 else   return new LwjglFileHandle(file,type);
}
