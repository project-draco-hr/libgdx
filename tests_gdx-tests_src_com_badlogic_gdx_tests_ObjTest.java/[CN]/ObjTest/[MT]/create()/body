{
  mesh=ModelLoader.loadObj(Gdx.files.internal("data/ship2.obj").read());
  texture=Gdx.graphics.newTexture(Gdx.files.getFileHandle("data/shiptexture.png",FileType.Internal),TextureFilter.MipMap,TextureFilter.Linear,TextureWrap.ClampToEdge,TextureWrap.ClampToEdge);
