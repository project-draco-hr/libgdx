{
  this.gl=gl;
  String renderer=gl.glGetString(GL10.GL_RENDERER);
  Log.d("AFX","OpenGL Renderer: " + renderer);
  if (renderer.toLowerCase().contains("pixelflinger"))   AndroidMesh.globalVBO=false;
  Log.d("AFX","Model: " + android.os.Build.MODEL);
  if (android.os.Build.MODEL.equals("MB200") || android.os.Build.MODEL.equals("MB220") || android.os.Build.MODEL.contains("Behold"))   AndroidMesh.globalVBO=false;
  for (int i=0; i < listeners.size(); i++)   listeners.get(i).render(this);
  viewportWidth=width;
  viewportHeight=height;
  gl.glViewport(0,0,width,height);
}
