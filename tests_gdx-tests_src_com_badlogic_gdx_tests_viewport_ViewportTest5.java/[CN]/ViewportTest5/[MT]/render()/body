{
  delay-=Gdx.graphics.getDeltaTime();
  if (delay <= 0) {
    if (Gdx.input.isKeyPressed(Input.Keys.SPACE)) {
      viewport=viewports.get((viewports.indexOf(viewport,true) + 1) % viewports.size);
      viewport.update(Gdx.graphics.getWidth(),Gdx.graphics.getHeight());
      delay=1f;
    }
  }
  Gdx.gl.glClearColor(0,0,0,1);
  Gdx.gl.glClear(GL20.GL_COLOR_BUFFER_BIT);
  viewport.enable();
  batch.setProjectionMatrix(camera.projection);
  batch.setTransformMatrix(camera.view);
  batch.begin();
  batch.setColor(1,1,1,1);
  batch.draw(texture,-4096,-4096,4096,4096,8192,8192,1,1,0,0,0,16,16,false,false);
  batch.setColor(1,0,0,1);
  batch.draw(texture,100,100,16,16,32,32,1,1,45,0,0,16,16,false,false);
  font.draw(batch,viewport.getClass().getSimpleName(),100,100);
  batch.end();
  viewport.disable();
  batch.setProjectionMatrix(new Matrix4().idt().setToOrtho2D(0,0,Gdx.graphics.getWidth(),Gdx.graphics.getHeight()));
  batch.setTransformMatrix(new Matrix4().idt());
  batch.begin();
  batch.setColor(1,1,1,1);
  batch.draw(border,0,0,viewport.viewportX / 2,Gdx.graphics.getHeight() / 2,viewport.viewportX,Gdx.graphics.getHeight(),1,1,0,0,0,border.getWidth(),border.getHeight(),true,false);
  batch.draw(border,Gdx.graphics.getWidth() - viewport.viewportX,0,viewport.viewportX / 2,Gdx.graphics.getHeight() / 2,viewport.viewportX,Gdx.graphics.getHeight(),1,1,0,0,0,border.getWidth(),border.getHeight(),false,false);
  batch.draw(border,0,Gdx.graphics.getHeight() - viewport.viewportY,Gdx.graphics.getWidth() / 2,viewport.viewportY / 2,Gdx.graphics.getWidth(),viewport.viewportY,1,1,0,0,0,border.getWidth(),border.getHeight(),false,false);
  batch.draw(border,0,0,Gdx.graphics.getWidth() / 2,viewport.viewportY / 2,Gdx.graphics.getWidth(),viewport.viewportY,1,1,0,0,0,border.getWidth(),border.getHeight(),false,true);
  batch.end();
}
