{
  stage=new Stage(480,320,true);
  Action complexAction=Forever.$(Sequence.$(Parallel.$(RotateBy.$(180,2),ScaleTo.$(1.4f,1.4f,2),FadeTo.$(0.7f,2)),Parallel.$(RotateBy.$(180,2),ScaleTo.$(1.0f,1.0f,2),FadeTo.$(1.0f,2))));
  texture=new Texture(Gdx.files.internal("data/badlogic.jpg"),false);
  texture.setFilter(TextureFilter.Linear,TextureFilter.Linear);
  final Image img1=new Image(new TextureRegion(texture));
  img1.width=img1.height=100;
  img1.originX=50;
  img1.originY=50;
  img1.x=img1.y=50;
  final Image img2=new Image(new TextureRegion(texture));
  img2.width=img1.height=50;
  img2.originX=50;
  img2.originY=50;
  img2.x=img2.y=150;
  stage.addActor(img1);
  stage.addActor(img2);
  img1.action(complexAction.copy());
  img2.action(complexAction.copy());
}
