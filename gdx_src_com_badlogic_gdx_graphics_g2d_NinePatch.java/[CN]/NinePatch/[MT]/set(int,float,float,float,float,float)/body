{
  final float fx2=x + width;
  final float fy2=y + height;
  vertices[idx++]=x;
  vertices[idx++]=y;
  vertices[idx]=color;
  idx+=3;
  vertices[idx++]=x;
  vertices[idx++]=fy2;
  vertices[idx]=color;
  idx+=3;
  vertices[idx++]=fx2;
  vertices[idx++]=fy2;
  vertices[idx]=color;
  idx+=3;
  vertices[idx++]=fx2;
  vertices[idx++]=y;
  vertices[idx]=color;
}
