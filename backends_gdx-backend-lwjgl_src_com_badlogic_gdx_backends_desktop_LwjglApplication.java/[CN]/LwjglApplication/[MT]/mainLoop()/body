{
  try {
    graphics.setupDisplay();
  }
 catch (  LWJGLException e) {
    throw new GdxRuntimeException(e);
  }
  Keyboard.enableRepeatEvents(true);
  listener.create();
  while (running && !Display.isCloseRequested()) {
    graphics.updateTime();
    input.update();
    listener.render();
    input.processEvents(null);
    Display.update();
    Display.sync(60);
  }
  listener.pause();
  listener.destroy();
  Display.destroy();
}
