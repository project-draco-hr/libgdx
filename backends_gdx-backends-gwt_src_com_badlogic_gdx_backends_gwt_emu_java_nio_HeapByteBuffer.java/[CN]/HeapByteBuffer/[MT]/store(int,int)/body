{
  int baseOffset=offset + index;
  if (order == Endianness.BIG_ENDIAN) {
    for (int i=3; i >= 0; i--) {
      backingArray[baseOffset + i]=(byte)(value & 0xFF);
      value=value >> 8;
    }
  }
 else {
    for (int i=0; i <= 3; i++) {
      backingArray[baseOffset + i]=(byte)(value & 0xFF);
      value=value >> 8;
    }
  }
}
