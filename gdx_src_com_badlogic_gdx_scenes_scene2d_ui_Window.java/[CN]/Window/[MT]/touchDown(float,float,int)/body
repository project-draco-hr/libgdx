{
  if (pointer != 0)   return false;
  if (parent.getActors().size() > 1)   parent.swapActor(this,parent.getActors().get(parent.getActors().size() - 1));
  if (super.touchDown(x,y,pointer))   return true;
  if (isMovable && height - y <= getTitleBarHeight()) {
    dragOffset.set(x,y);
    dragging=true;
  }
 else   dragging=false;
  return true;
}
