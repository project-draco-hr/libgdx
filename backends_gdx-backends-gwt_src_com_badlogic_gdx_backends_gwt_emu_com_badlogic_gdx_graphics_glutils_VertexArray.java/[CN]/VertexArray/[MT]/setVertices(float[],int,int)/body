{
  isDirty=true;
  BufferUtils.copy(vertices,buffer,count,offset);
  buffer.position(0);
  buffer.limit(count);
  if (isBound) {
    if (Gdx.gl20 != null) {
      GL20 gl=Gdx.gl20;
      gl.glBufferData(GL20.GL_ARRAY_BUFFER,buffer.limit(),buffer,usage);
    }
 else {
      GL11 gl=Gdx.gl11;
      gl.glBufferData(GL11.GL_ARRAY_BUFFER,buffer.limit(),buffer,usage);
    }
    isDirty=false;
  }
}
