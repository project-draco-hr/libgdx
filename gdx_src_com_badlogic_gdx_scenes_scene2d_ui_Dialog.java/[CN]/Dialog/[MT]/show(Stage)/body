{
  stage.setKeyboardFocus(this);
  stage.setScrollFocus(this);
  pack();
  setPosition((stage.getWidth() - getWidth()) / 2,(stage.getHeight() - getHeight()) / 2);
  stage.addActor(this);
  if (fadeDuration > 0) {
    getColor().a=0;
    addAction(Actions.fadeIn(fadeDuration,Interpolation.fade));
  }
  return this;
}
