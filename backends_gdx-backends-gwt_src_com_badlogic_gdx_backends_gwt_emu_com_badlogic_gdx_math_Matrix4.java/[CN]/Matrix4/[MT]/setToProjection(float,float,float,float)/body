{
  this.idt();
  float l_fd=(float)(1.0 / Math.tan((fov * (Math.PI / 180)) / 2.0));
  float l_a1=(far + near) / (near - far);
  float l_a2=(2 * far * near) / (near - far);
  val[M00]=l_fd / aspectRatio;
  val[M10]=0;
