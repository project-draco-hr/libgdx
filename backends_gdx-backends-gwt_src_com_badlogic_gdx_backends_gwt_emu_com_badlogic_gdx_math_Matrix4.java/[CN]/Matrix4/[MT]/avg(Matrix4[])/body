{
  final float w=1.0f / t.length;
  tmpVec.set(0,0,0);
  for (int i=0; i < t.length; i++) {
    t[i].getScale(tmpUp).scl(w);
    if (tmpUp.x < 0)     tmpUp.x=-tmpUp.x;
    if (tmpUp.y < 0)     tmpUp.y=-tmpUp.y;
    if (tmpUp.z < 0)     tmpUp.z=-tmpUp.z;
    tmpVec.add(tmpUp);
  }
  setToScaling(tmpVec);
  quat.set(t[0].getRotation(quat2).exp(w));
  for (int i=1; i < t.length; i++)   quat.mul(t[i].getRotation(quat2).exp(w));
  quat.nor();
  rotate(quat);
  setTranslation(0,0,0);
  for (int i=0; i < t.length; i++)   trn(t[i].getTranslation(tmpVec).scl(w));
  return this;
}
