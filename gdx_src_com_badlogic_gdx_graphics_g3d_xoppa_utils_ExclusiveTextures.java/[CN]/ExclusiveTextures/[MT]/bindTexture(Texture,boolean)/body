{
  int result;
  reused=false;
switch (method) {
case ROUNDROBIN:
    result=bindTextureRoundRobin(texture);
  break;
case WEIGHTED:
result=bindTextureWeighted(texture);
break;
default :
return -1;
}
if (reused) {
reuseCount++;
if (rebind) texture.bind(result);
 else Gdx.gl.glActiveTexture(GL10.GL_TEXTURE0 + result);
}
 else bindCount++;
return result;
}
