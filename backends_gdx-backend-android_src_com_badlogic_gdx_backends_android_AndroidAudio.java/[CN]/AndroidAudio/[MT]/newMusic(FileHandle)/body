{
  AndroidFileHandle aHandle=(AndroidFileHandle)file;
  MediaPlayer mediaPlayer=new MediaPlayer();
  if (aHandle.type() == FileType.Internal) {
    try {
      AssetFileDescriptor descriptor=aHandle.assets.openFd(aHandle.path());
      mediaPlayer.setDataSource(descriptor.getFileDescriptor(),descriptor.getStartOffset(),descriptor.getLength());
      descriptor.close();
      mediaPlayer.prepare();
      AndroidMusic music=new AndroidMusic(this,mediaPlayer);
synchronized (musics) {
        musics.add(music);
      }
      return music;
    }
 catch (    Exception ex) {
      throw new GdxRuntimeException("Error loading audio file: " + file + "\nNote: Internal audio files must be placed in the assets directory.",ex);
    }
  }
 else {
    try {
      mediaPlayer.setDataSource(aHandle.path());
      mediaPlayer.prepare();
      AndroidMusic music=new AndroidMusic(this,mediaPlayer);
synchronized (musics) {
        musics.add(music);
      }
      return music;
    }
 catch (    Exception ex) {
      throw new GdxRuntimeException("Error loading audio file: " + file,ex);
    }
  }
}
