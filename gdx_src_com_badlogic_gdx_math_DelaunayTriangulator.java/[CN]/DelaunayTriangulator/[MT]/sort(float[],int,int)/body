{
  int pointCount=count / 2;
  originalIndices.clear();
  originalIndices.ensureCapacity(pointCount);
  int[] originalIndicesArray=originalIndices.items;
  for (int i=0; i < pointCount; i++)   originalIndicesArray[i]=i;
  int lower=offset;
  int upper=offset + count - 1;
  IntArray stack=quicksortStack;
  stack.add(lower);
  stack.add(upper - 1);
  while (stack.size > 0) {
    upper=stack.pop();
    lower=stack.pop();
    if (upper <= lower)     continue;
    int i=quicksortPartition(values,lower,upper,originalIndicesArray);
    if (i - lower > upper - i) {
      stack.add(lower);
      stack.add(i - 2);
    }
    stack.add(i + 2);
    stack.add(upper);
    if (upper - i >= i - lower) {
      stack.add(lower);
      stack.add(i - 2);
    }
  }
}
