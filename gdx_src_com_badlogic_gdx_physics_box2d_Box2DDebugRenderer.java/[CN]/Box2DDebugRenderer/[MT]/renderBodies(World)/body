{
  for (  Body body : world.getBodies()) {
    Transform transform=body.getTransform();
    for (    Fixture fixture : body.getFixtureList()) {
      if (body.isActive() == false)       drawShape(fixture,transform,SHAPE_NOT_ACTIVE);
 else       if (body.getType() == BodyType.StaticBody)       drawShape(fixture,transform,SHAPE_STATIC);
 else       if (body.getType() == BodyType.KinematicBody)       drawShape(fixture,transform,SHAPE_KINEMATIC);
 else       if (body.isAwake() == false)       drawShape(fixture,transform,SHAPE_NOT_AWAKE);
 else       drawShape(fixture,transform,SHAPE_AWAKE);
    }
  }
  for (  Joint joint : world.getJoints())   drawJoint(joint);
  for (  Contact contact : world.getContactList())   drawContact(contact);
}
