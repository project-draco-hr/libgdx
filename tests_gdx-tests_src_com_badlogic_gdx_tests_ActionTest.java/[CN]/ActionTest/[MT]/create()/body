{
  stage=new Stage(480,320,true);
  Texture texture=new Texture(Gdx.files.internal("data/badlogic.jpg"),false);
  texture.setFilter(TextureFilter.Linear,TextureFilter.Linear);
  Image img=new Image("actor",texture);
  img.width=img.height=100;
  img.originX=50;
  img.originY=50;
  img.x=img.y=100;
  img.action(Sequence.$(FadeOut.$(1),FadeIn.$(1),Delay.$(MoveTo.$(100,100,1),2),ScaleTo.$(0.5f,0.5f,1),FadeOut.$(0.5f),Delay.$(Parallel.$(RotateTo.$(360,1),FadeIn.$(1),ScaleTo.$(1,1,1)),1)));
  stage.addActor(img);
}
