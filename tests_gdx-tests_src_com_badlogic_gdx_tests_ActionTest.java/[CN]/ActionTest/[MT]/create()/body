{
  stage=new Stage(480,320,true);
  Texture texture=new Texture(Gdx.files.internal("data/badlogic.jpg"),false);
  texture.setFilter(TextureFilter.Linear,TextureFilter.Linear);
  final Image img=new Image("actor",texture);
  img.width=img.height=100;
  img.originX=50;
  img.originY=50;
  img.x=img.y=100;
  OnActionCompleted listener=new OnActionCompleted(){
    @Override public void completed(    Action action){
      img.action(Parallel.$(Sequence.$(FadeOut.$(2),FadeIn.$(2)),Sequence.$(ScaleTo.$(0.1f,0.1f,1.5f),ScaleTo.$(1.0f,1.0f,1.5f))).setCompletionListener(this));
    }
  }
;
  img.action(Parallel.$(Sequence.$(FadeOut.$(2),FadeIn.$(2)),Sequence.$(ScaleTo.$(0.1f,0.1f,1.5f),ScaleTo.$(1.0f,1.0f,1.5f))).setCompletionListener(listener));
  stage.addActor(img);
}
