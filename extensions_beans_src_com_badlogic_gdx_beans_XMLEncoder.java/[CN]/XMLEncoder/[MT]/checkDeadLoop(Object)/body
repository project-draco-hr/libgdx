{
  int n=0;
  Object obj=value;
  while (obj != null) {
    Record rec=objRecordMap.get(obj);
    if (rec != null && rec.exp != null) {
      obj=rec.exp.getTarget();
    }
 else {
      break;
    }
    if (obj != null && (obj.getClass().isAssignableFrom(value.getClass())) && obj.equals(value)) {
      n++;
      if (n >= DEADLOCK_THRESHOLD) {
        return true;
      }
    }
  }
  return false;
}
