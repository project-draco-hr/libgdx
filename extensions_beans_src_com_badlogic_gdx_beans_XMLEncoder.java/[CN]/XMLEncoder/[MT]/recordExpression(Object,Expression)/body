{
  Record rec=objRecordMap.get(value);
  if (rec == null) {
    rec=new Record();
    objRecordMap.put(value,rec);
  }
  if (rec.exp == null) {
    for (    Statement statement : rec.stats) {
      if (statement.getClass() == Expression.class) {
        flushPrePending.add(value);
      }
    }
  }
  rec.exp=exp;
  if (value == owner && owner != null) {
    needOwner=true;
  }
  recordStatement(exp);
}
