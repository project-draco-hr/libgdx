{
  int n=list.size;
  float[] array=new float[n / 2 * 6];
  int i=0;
  int j=0;
  for (int k=0; k < n; ) {
    float brightness=0.3f + 0.4f * ((j / 3) * 3 / (n / 3f));
    array[i++]=list.get(k++);
    array[i++]=list.get(k++);
    array[i++]=color.r * brightness;
    array[i++]=color.g * brightness;
    array[i++]=color.b * brightness;
    array[i++]=1;
    j++;
  }
  return array;
}
