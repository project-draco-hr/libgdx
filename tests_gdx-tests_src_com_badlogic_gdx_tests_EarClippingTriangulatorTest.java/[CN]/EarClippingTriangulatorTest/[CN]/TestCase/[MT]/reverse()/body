{
  float[] vertices=polygon.items;
  for (int i=0, lastIndex=polygon.size - 2, n=polygon.size / 2; i < n; i++) {
    int ii=lastIndex - i;
    float temp=vertices[i];
    vertices[i]=vertices[ii];
    vertices[ii]=temp;
    i++;
    ii++;
    temp=vertices[i];
    vertices[i]=vertices[ii];
    vertices[ii]=temp;
  }
}
