{
  red.a=(red.a + Gdx.graphics.getDeltaTime() * 0.1f) % 1;
  GL10 gl=Gdx.graphics.getGL10();
  gl.glClear(GL10.GL_COLOR_BUFFER_BIT);
  spriteBatch.begin();
  logoSprite.draw(spriteBatch);
switch (renderMode) {
case 0:
    font.setScale(1);
  renderNormal("normal");
break;
case 1:
font.setScale(1);
renderCached();
break;
case 2:
font.setScale(red.a + 0.5f);
renderNormal("normal scaled");
break;
case 3:
font.setScale(1);
renderCachedScaled();
break;
}
spriteBatch.end();
}
