{
  int j=polygon.size() - 1;
  boolean oddNodes=false;
  for (int i=0; i < polygon.size(); i++) {
    if ((polygon.get(i).getY() < y && polygon.get(j).getY() >= y) || (polygon.get(j).getY() < y && polygon.get(i).getY() >= y)) {
      if (polygon.get(i).getX() + (y - polygon.get(i).getY()) / (polygon.get(j).getY() - polygon.get(i).getY()) * (polygon.get(j).getX() - polygon.get(i).getX()) < x) {
        oddNodes=!oddNodes;
      }
    }
    j=i;
  }
  return oddNodes;
}
