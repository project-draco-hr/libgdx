{
  double pow=time / (double)TRANSITION_DURATION;
  spriteBatch.getTransformMatrix().idt();
  spriteBatch.begin();
  draw(Art.bg,0,0);
  spriteBatch.end();
  c.x=(int)(-xa * 320 * pow);
  c.y=(int)(-ya * 240 * pow);
  level1.render(this,c);
  c.x=(int)(xa * 320 * (1 - pow));
  c.y=(int)(ya * 240 * (1 - pow));
  level2.render(this,c);
}
