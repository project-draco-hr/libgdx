{
  this.mesh=new Mesh(false,false,size * 6,0,new VertexAttribute(Usage.Position,2,"a_position"),new VertexAttribute(Usage.ColorPacked,4,"a_color"),new VertexAttribute(Usage.TextureCoordinates,2,"a_texCoords"));
  projectionMatrix.setToOrtho2D(0,0,Gdx.graphics.getWidth(),Gdx.graphics.getHeight());
  vertices=new float[size * SPRITE_SIZE];
  if (Gdx.graphics.isGL20Available())   createShader();
}
