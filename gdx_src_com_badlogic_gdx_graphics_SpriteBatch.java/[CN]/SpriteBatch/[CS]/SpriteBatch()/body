{
  this.mesh=new Mesh(false,false,MAX_VERTICES,0,new VertexAttribute(Usage.Position,2,"a_position"),new VertexAttribute(Usage.ColorPacked,4,"a_color"),new VertexAttribute(Usage.TextureCoordinates,2,"a_texCoords"));
  viewMatrix.setToOrtho2D(0,0,Gdx.graphics.getWidth(),Gdx.graphics.getHeight());
  if (Gdx.graphics.isGL20Available())   createShader();
}
