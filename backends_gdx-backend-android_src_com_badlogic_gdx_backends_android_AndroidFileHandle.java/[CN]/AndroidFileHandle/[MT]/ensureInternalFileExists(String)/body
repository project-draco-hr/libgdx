{
  try {
    assets.open(fileName).close();
  }
 catch (  Exception ex) {
    int count;
    try {
      count=assets.list(fileName).length;
    }
 catch (    Exception ex2) {
      throw new GdxRuntimeException("Error locating file: " + fileName + " ("+ type+ ")",ex2);
    }
    if (count == 0)     throw new GdxRuntimeException("File not found: " + fileName + " ("+ type+ ")",ex);
  }
}
