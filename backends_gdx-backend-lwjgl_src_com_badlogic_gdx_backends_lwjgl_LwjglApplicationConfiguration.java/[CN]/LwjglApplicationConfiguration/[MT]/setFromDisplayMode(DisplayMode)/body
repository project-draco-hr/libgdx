{
  this.width=mode.width;
  this.height=mode.height;
  if (mode.bitsPerPixel == 16) {
    this.r=5;
    this.g=6;
    this.b=5;
    this.a=0;
  }
  if (mode.bitsPerPixel == 24) {
    this.r=8;
    this.g=8;
    this.b=8;
    this.a=0;
  }
  if (mode.bitsPerPixel == 32) {
    this.r=8;
    this.g=8;
    this.b=8;
    this.a=8;
  }
  this.fullscreen=true;
}
