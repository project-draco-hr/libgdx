{
  final float hh=radius + 0.5f * height;
  final Mesh mesh=new Mesh(true,8,36,new VertexAttribute(Usage.Position,3,"a_position"));
  mesh.setVertices(new float[]{radius,hh,radius,radius,hh,-radius,-radius,hh,radius,-radius,hh,-radius,radius,-hh,radius,radius,-hh,-radius,-radius,-hh,radius,-radius,-hh,-radius});
  mesh.setIndices(new short[]{0,1,2,1,2,3,4,5,6,5,6,7,0,2,4,4,6,2,1,3,5,5,7,3,2,3,6,6,7,3,0,1,4,4,5,1});
  return new StillModel(new StillSubMesh("capsule",mesh,GL10.GL_TRIANGLES,new Material()));
}
