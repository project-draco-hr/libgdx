{
  mesh=new Mesh(true,4,4,new VertexAttribute(Usage.Position,2,"a_position"),new VertexAttribute(Usage.TextureCoordinates,2,"a_texCoord"));
  mesh.setVertices(new float[]{-0.5f,-0.5f,0,0,0.5f,-0.5f,1,0,0.5f,0.5f,1,1,-0.5f,0.5f,0,1});
  mesh.setIndices(new short[]{0,1,2,3});
  texture=new Texture(Gdx.files.internal("data/badlogic.jpg"),true);
  texture.setFilter(TextureFilter.MipMap,TextureFilter.Linear);
