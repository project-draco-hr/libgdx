{
  taken+=delta;
  if (taken >= duration) {
    taken=duration;
    done=true;
    return taken;
  }
 else   if (interpolator == null) {
    return taken * invDuration;
  }
 else {
    float interpolatedTime=interpolator.getInterpolation(taken / duration) * duration;
    return interpolatedTime * invDuration;
  }
}
