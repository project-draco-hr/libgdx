{
switch (mode) {
case GL20.GL_POINTS:
    return count;
case GL20.GL_LINES:
  return count / 2;
case GL20.GL_LINE_STRIP:
return count - 1;
case GL20.GL_LINE_LOOP:
return count;
case GL20.GL_TRIANGLE_STRIP:
return count - 2;
case GL20.GL_TRIANGLE_FAN:
return count - 2;
case GL20.GL_TRIANGLES:
return count / 3;
default :
throw new IllegalArgumentException("Unknown primitive mode '" + mode + "'.");
}
}
