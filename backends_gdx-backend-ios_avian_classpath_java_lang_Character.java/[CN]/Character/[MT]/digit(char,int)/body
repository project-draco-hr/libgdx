{
  int digit=0;
  if ((c >= '0') && (c <= '9')) {
    digit=c - '0';
  }
 else   if ((c >= 'a') && (c <= 'z')) {
    digit=c - 'a' + 10;
  }
 else   if ((c >= 'A') && (c <= 'Z')) {
    digit=c - 'A' + 10;
  }
 else {
    return -1;
  }
  if (digit < radix) {
    return digit;
  }
 else {
    return -1;
  }
}
