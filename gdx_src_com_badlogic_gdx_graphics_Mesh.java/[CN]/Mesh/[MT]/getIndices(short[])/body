{
  if (indices.length < getNumIndices())   throw new IllegalArgumentException("not enough room in indices array, has " + indices.length + " floats, needs "+ getNumIndices());
  int pos=getIndicesBuffer().position();
  getIndicesBuffer().position(0);
  getIndicesBuffer().get(indices,0,getNumIndices());
  getIndicesBuffer().position(pos);
}
