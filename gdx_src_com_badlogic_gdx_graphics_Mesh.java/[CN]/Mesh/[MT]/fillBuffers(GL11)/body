{
  gl.glBindBuffer(GL11.GL_ARRAY_BUFFER,vertexBufferObjectHandle);
  if (Gdx.graphics.getType() == GraphicsType.AndroidGL)   gl.glBufferData(GL11.GL_ARRAY_BUFFER,getNumVertices() * attributes.vertexSize,vertices,isStatic ? GL11.GL_STATIC_DRAW : GL11.GL_DYNAMIC_DRAW);
 else   gl.glBufferSubData(GL11.GL_ARRAY_BUFFER,0,getNumVertices() * attributes.vertexSize,vertices);
  gl.glBindBuffer(GL11.GL_ARRAY_BUFFER,0);
  if (maxIndices > 0) {
    gl.glBindBuffer(GL11.GL_ELEMENT_ARRAY_BUFFER,indexBufferObjectHandle);
    if (Gdx.graphics.getType() == GraphicsType.AndroidGL)     gl.glBufferData(GL11.GL_ELEMENT_ARRAY_BUFFER,indices.limit() * 2,indices,isStatic ? GL11.GL_STATIC_DRAW : GL11.GL_DYNAMIC_DRAW);
 else     gl.glBufferSubData(GL11.GL_ELEMENT_ARRAY_BUFFER,0,indices.limit() * 2,indices);
    gl.glBindBuffer(GL11.GL_ELEMENT_ARRAY_BUFFER,0);
  }
}
