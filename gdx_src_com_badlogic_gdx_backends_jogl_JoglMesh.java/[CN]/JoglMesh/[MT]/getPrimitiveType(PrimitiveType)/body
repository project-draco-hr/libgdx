{
  if (type == PrimitiveType.Lines)   return GL.GL_LINES;
 else   if (type == PrimitiveType.Triangles)   return GL.GL_TRIANGLES;
 else   if (type == PrimitiveType.LineStrip)   return GL.GL_LINE_STRIP;
 else   if (type == PrimitiveType.TriangleStrip)   return GL.GL_TRIANGLE_STRIP;
 else   if (type == PrimitiveType.Points)   return GL.GL_POINTS;
 else   return GL.GL_TRIANGLE_FAN;
}
