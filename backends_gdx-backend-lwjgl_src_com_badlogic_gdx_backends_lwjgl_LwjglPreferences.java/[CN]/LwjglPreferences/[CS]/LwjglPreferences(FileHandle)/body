{
  this.name=file.name();
  this.file=file;
  InputStream in=null;
  try {
    in=new BufferedInputStream(file.read());
    properties.loadFromXML(in);
  }
 catch (  Throwable t) {
    System.out.println(t.getMessage());
  }
 finally {
    if (in != null)     try {
      in.close();
    }
 catch (    Exception e) {
    }
  }
  Runtime.getRuntime().addShutdownHook(new Thread(){
    @Override public void run(){
      flush();
    }
  }
);
}
