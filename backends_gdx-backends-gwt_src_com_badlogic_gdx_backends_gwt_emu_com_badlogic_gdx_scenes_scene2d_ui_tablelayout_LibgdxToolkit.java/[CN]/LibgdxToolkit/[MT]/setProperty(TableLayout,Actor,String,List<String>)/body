{
  try {
    super.setProperty(layout,object,name,values);
  }
 catch (  RuntimeException ex) {
    if (layout.skin != null && values.size() == 1 && name.equalsIgnoreCase("style")) {
      try {
        String styleName=values.get(0);
        String simpleName=object.getClass().getName();
        simpleName=simpleName.substring(simpleName.lastIndexOf('.') + 1);
        Type styleClass=ReflectionCache.forName(object.getClass().getName() + "$" + simpleName+ "Style");
        if (layout.skin.hasStyle(styleName,styleClass.getClassOfType())) {
          try {
            Method setStyleMethod=ReflectionCache.getType(object.getClass()).getMethod("setStyle",styleClass.getClassOfType());
            setStyleMethod.invoke(object,layout.skin.getStyle(styleName,styleClass.getClassOfType()));
            return;
          }
 catch (          Exception ex2) {
            throw new GdxRuntimeException("Unable to set style: " + styleName,ex2);
          }
        }
      }
 catch (      ClassNotFoundException ignored) {
      }
    }
    throw ex;
  }
}
