{
  log.error("Error loading asset.",t);
  if (tasks.isEmpty())   throw new GdxRuntimeException(t);
  AssetLoadingTask task=tasks.pop();
  AssetDescriptor assetDesc=task.assetDesc;
  if (task.dependenciesLoaded && task.dependencies != null)   for (  AssetDescriptor desc : task.dependencies)   unload(desc.fileName);
  tasks.clear();
  if (listener != null)   listener.error(assetDesc,t);
 else   throw new GdxRuntimeException(t);
}
